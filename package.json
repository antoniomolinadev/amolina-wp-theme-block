{
  "name": "amolina-wp-theme-block",
  "version": "0.0.1",
  "description": "Offical theme of amolina WP Theme Block",
  "author": "Antonio Molina",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "WordPress",
    "Theme",
    "amolina block"
  ],
  "homepage": "https://github.com/antoniomolinadev/amolina-wp-theme-block",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antoniomolinadev/amolina-wp-theme-block.git"
  },
  "bugs": {
    "url": "https://github.com/antoniomolinadev/amolina-wp-theme-block/issues"
  },
  "devDependencies": {
    "@wordpress/prettier-config": "^4.1.0",
    "@wordpress/scripts": "^19.2.2",
    "dir-archiver": "^1.1.1",
    "prettier": "^3.3.2",
    "rtlcss": "^3.5.0",
    "sass": "^1.77.6",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.5"
  },
  "rtlcssConfig": {
    "options": {
      "autoRename": false,
      "autoRenameStrict": false,
      "blacklist": {},
      "clean": true,
      "greedy": false,
      "processUrls": false,
      "stringMap": []
    },
    "plugins": [],
    "map": false
  },
  "scripts": {
    "sass": "sass --style=expanded sass/style.scss ./resources/css/app.min.css --style=expanded",
    "watch": "rm -rf resources/css/app.min.css && sass --watch --embed-source-map sass/style.scss ./resources/css/app.min.css",
    "compile:css": "node-sass sass/ -o ./ && stylelint '*.css' --fix || true && stylelint '*.css' --fix",
    "compile:rtl": "rtlcss style.css style-rtl.css",
    "lint:scss": "wp-scripts lint-style 'sass/**/*.scss'",
    "lint:js": "wp-scripts lint-js 'js/*.js'",
    "bundle": "dir-archiver --src . --dest ../amolina-wp-theme-block.zip --exclude .DS_Store .stylelintrc.json .eslintrc .git .gitattributes .github .gitignore README.md composer.json composer.lock node_modules vendor package-lock.json package.json .travis.yml phpcs.xml.dist sass style.css.map yarn.lock"
  }
}
